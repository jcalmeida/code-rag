# OpenAI API Key for embeddings
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key for Claude chat models (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Git credentials (Personal Access Token works for both GitHub and GitLab)
GIT_TOKEN=your_github_or_gitlab_token_here

# ChromaDB settings
CHROMA_PERSIST_DIRECTORY=./data/chroma

# Repository settings
REPOS_CONFIG_PATH=./config/repos.json
REPOS_BASE_PATH=./data/repos

# Webhook secret (optional, for securing webhook endpoints)
WEBHOOK_SECRET=your_webhook_secret_here

# Embedding model
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# Chunking settings
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=200
